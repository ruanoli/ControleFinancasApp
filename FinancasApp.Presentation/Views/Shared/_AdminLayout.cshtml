@using FinancasApp.Domain.Models
@using Newtonsoft.Json
@{
    var user = JsonConvert.DeserializeObject<User>(User.Identity.Name);
    var userName = user.Name;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FinancasApp</title>
    @*     <link href="~/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @RenderSection("styles", required: false)

</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/Home/Dashboard">
                <img src="~/img/logo.png" width="50" height="50" />

            </a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" href="~/Home/Dashboard">Dashboard</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" id="gerenciarMovimentacoesDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Gerenciar Contas
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="gerenciarMovimentacoesDropdown">
                        <li><a class="dropdown-item" href="/Transacton/Register">Cadastrar</a></li>
                        <li><a class="dropdown-item" href="/Transacton/Consult">Consultar</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        Gerenciar Categorias
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="/Category/Register">Cadastrar</a>
                        <a class="dropdown-item" href="/Category/Consult">Consultar</a>
                    </div>
                </li>
            </ul>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white">Olá, <strong>@userName</strong>!</a>
                    </li>
                </ul>
            </div>

            <a class="text-decoration-none text-white" href="/Account/Logout" onclick="return confirm('Deseja realmente sair?');">
                 | Sair
            </a>
        </div>
    </header>

    <div class="row mt-5">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-body">
                    @if (TempData["MessageSuccess"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["MessageSuccess"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    else if (TempData["MessageAlert"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            @TempData["MessageAlert"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    else if (TempData["MessageError"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["MessageError"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-light text-center py-3">
        <p>&copy; 2024 FinancasApp - Todos os direitos reservados.</p>
    </footer>


    @*     <script src="~/js/bootstrap.bundle.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
