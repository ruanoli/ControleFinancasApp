@model FinancasApp.Presentation.Models.Account.AccountLoginViewModel


<div class="text-center">
    <img src="~/img/imgFinancas1.png" width="350" height="200" />
    <h3>Acessar Sistema</h3>
</div>

<div class="text-center text-danger">
    <h5>@TempData["MessageErro"]</h5>
</div>

@using (Html.BeginForm())
{
    <div class="form-group mb-2">
        <label><strong>E-mail</strong></label>
        <div class=" text-danger">
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Digite seu e-mail" })
    </div>


    <div class="form-group mb-4">
        <label><strong>Senha</strong></label>
        <div class="text-danger">
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Digite sua senha" })
    </div>


    <div class="mb-2 text-center">
        <input type="submit" class="btn btn-warning btn-block" value="Entrar" />
    </div>

    <div class="mb-2 text-center">
        <p>Não possui conta? <strong><a href="/Account/Register" style="text-decoration: none">Registre-se</a></strong></p>
    </div>

    <div class="mb-2 text-center">
        <a href="/Account/ForgotPassword" style="text-decoration: none">Esqueci a Senha</a>
    </div>
}

